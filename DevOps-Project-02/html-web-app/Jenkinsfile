pipeline {
    agent any
    stages {
        stage('1. Build Docker Image') {
            steps {
                dir('html-web-app') {
                    sh '''
                    /usr/local/bin/docker build --no-cache -t digdigdigdig/html-web-app:${BUILD_NUMBER} .
                    /usr/local/bin/docker images | head -5
                    '''
                }
            }
        }
        stage('2. Test Container') {
            steps {
                dir('html-web-app') {
                    sh '''
                    /usr/local/bin/docker run --rm -d -p 8081:80 digdigdigdig/html-web-app:${BUILD_NUMBER}
                    sleep 5
                    curl -f http://localhost:8081 || (echo "Container test FAILED" && exit 1)
                    /usr/local/bin/docker ps -a
                    /usr/local/bin/docker stop $(docker ps -q --filter ancestor=digdigdigdig/html-web-app:${BUILD_NUMBER})
                    '''
                }
            }
        }
        stage('3. Push to Docker Hub') {
            steps {
                dir('html-web-app') {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                            sh "docker push digdigdigdig/html-web-app:${BUILD_NUMBER}"
                        }
                    }
                }
            }
        }
        stage('4. Update ECS Task Definition and Deploy') {
            steps {
                dir('html-web-app') {
                    sh '''
                    sed -i "" "s|digdigdigdig/html-web-app:latest|digdigdigdig/html-web-app:${BUILD_NUMBER}|g" task-definition.json
                    aws ecs register-task-definition --cli-input-json file://task-definition.json --region us-east-1
                    aws ecs update-service --cluster devops-project1-cluster --service html-web-service --task-definition html-web-task --force-new-deployment --region us-east-1
                    aws ecs wait services-stable --cluster devops-project1-cluster --services html-web-service --region us-east-1
                    '''
                }
            }
        }
    }
    post {
        always {
            sh '/usr/local/bin/docker system prune -f || true'
        }
        success {
            echo 'üöÄ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs.'
        }
    }
}
