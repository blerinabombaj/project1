pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "digdigdigdig/html-web-app:${BUILD_NUMBER}"
        AWS_REGION = 'us-east-1'
        ECS_CLUSTER = 'devops-project1-cluster'
        ECS_SERVICE = 'html-web-service'
        ECS_TASK_DEFINITION = 'html-web-task'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Use full Docker path for macOS/Homebrew
                    sh '''
                        /usr/local/bin/docker build -t ${DOCKER_IMAGE} .
                        /usr/local/bin/docker images | grep ${DOCKER_IMAGE}
                    '''
                }
            }
        }
        
        stage('Test Container Locally') {
            steps {
                sh '''
                    /usr/local/bin/docker run --rm -d -p 8081:80 --name test-container ${DOCKER_IMAGE}
                    sleep 5
                    curl -f http://localhost:8081 || echo "Test failed"
                    /usr/local/bin/docker stop test-container
                '''
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                script {
                    // Docker login + push
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                        sh '''
                            echo $DOCKER_PASS | /usr/local/bin/docker login -u $DOCKER_USER --password-stdin
                            /usr/local/bin/docker push ${DOCKER_IMAGE}
                        '''
                    }
                }
            }
        }
        
        stage('Update ECS Task Definition') {
            steps {
                sh '''
                    sed -i "" "s|digdigdigdig/html-web-app:latest|${DOCKER_IMAGE}|g" task-definition.json
                    aws ecs register-task-definition --cli-input-json file://task-definition.json --region us-east-1
                '''
            }
        }
        
        stage('Deploy to ECS') {
            steps {
                sh '''
                    aws ecs update-service \
                        --cluster ${ECS_CLUSTER} \
                        --service ${ECS_SERVICE} \
                        --task-definition ${ECS_TASK_DEFINITION} \
                        --force-new-deployment \
                        --region us-east-1
                    aws ecs wait services-stable --cluster ${ECS_CLUSTER} --services ${ECS_SERVICE} --region us-east-1
                '''
            }
        }
    }
    
    post {
        always {
            sh '/usr/local/bin/docker system prune -f || true'
        }
        success {
            echo 'üöÄ Pipeline SUCCESS! Static site deployed to ECS!'
        }
        failure {
            echo '‚ùå Pipeline FAILED. Check logs above.'
        }
    }
}
