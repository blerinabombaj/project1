pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "digdigdigdig/html-web-app:${BUILD_NUMBER}"
        AWS_REGION = 'us-east-1'
        ECS_CLUSTER = 'devops-project1-cluster'
        ECS_SERVICE = 'html-web-service'
        ECS_TASK_DEFINITION = 'html-web-task'
    }
    
    stages {
        stage('Docker Login') {
            steps {
                script {
                    try {
                        withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                            sh '''
                            echo $DOCKER_PASS | /usr/local/bin/docker login -u $DOCKER_USER --password-stdin
                            echo "Docker login successful"
                            '''
                        }
                    } catch (Exception e) {
                        echo "No dockerhub credentials found, skipping login"
                    }
                }
            }
        }
        
        stage('Debug Workspace') {
            steps {
                sh '''
                echo "Listing contents of DevOps-Project-02/html-web-app:"
                ls -la DevOps-Project-02/html-web-app
                '''
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir('DevOps-Project-02/html-web-app') {
                    sh '''
                    DOCKER_BUILDKIT=0 /usr/local/bin/docker build --no-cache -t ${DOCKER_IMAGE} .
                    /usr/local/bin/docker images | head -5
                    '''
                }
            }
        }
        
        stage('Test Container') {
            steps {
                dir('DevOps-Project-02/html-web-app') {
                    sh '''
                    /usr/local/bin/docker run --rm -d -p 8081:80 ${DOCKER_IMAGE}
                    sleep 5
                    curl -f http://localhost:8081 || (echo "Container test FAILED" && exit 1)
                    /usr/local/bin/docker stop $(/usr/local/bin/docker ps -q --filter ancestor=${DOCKER_IMAGE})
                    echo "Container test PASSED"
                    '''
                }
            }
        }
        
        stage('Push to Docker Hub') {
            when {
                expression { env.BUILD_NUMBER != null }
            }
            steps {
                dir('DevOps-Project-02/html-web-app') {
                    script {
                        try {
                            docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                                sh "/usr/local/bin/docker push ${DOCKER_IMAGE}"
                            }
                        } catch (Exception e) {
                            echo "Push skipped - no credentials available"
                        }
                    }
                }
            }
        }
        
        stage('Update ECS Task Definition and Deploy') {
            steps {
                dir('DevOps-Project-02/html-web-app') {
                    sh '''
                    sed -i "" "s|digdigdigdig/html-web-app:latest|${DOCKER_IMAGE}|g" task-definition.json || echo "task-definition.json update skipped"
                    aws ecs register-task-definition --cli-input-json file://task-definition.json --region ${AWS_REGION}
                    aws ecs update-service --cluster ${ECS_CLUSTER} --service ${ECS_SERVICE} --task-definition ${ECS_TASK_DEFINITION} --force-new-deployment --region ${AWS_REGION}
                    aws ecs wait services-stable --cluster ${ECS_CLUSTER} --services ${ECS_SERVICE} --region ${AWS_REGION}
                    '''
                }
            }
        }
    }
    
    post {
        always {
            sh '/usr/local/bin/docker system prune -f || true'
        }
        success {
            echo "üöÄ Pipeline completed successfully! Image: ${DOCKER_IMAGE}"
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs.'
        }
    }
}
